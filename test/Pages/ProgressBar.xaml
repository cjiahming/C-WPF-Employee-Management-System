<Page x:Class="test.Pages.ProgressBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProgressBar">

    <Grid Background="#FF272C45">
        <ProgressBar x:Name="PB1" Height="35" Minimum="0" Maximum="100" Value="{Binding WorkerState}" Margin="8,407,9,7.6"/>
        <TextBlock Foreground="White" Text="{Binding ElementName=PB1, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Left" Margin="386,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="61" FontSize="26"/>
    </Grid>
</Page>
